<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="202109151940"  author="maria.ribeiro">
        <createTable tableName="situacao">
            <column name="id" type="int" autoIncrement="true" remarks="identificador tabela situacao">
                <constraints nullable="false" primaryKey ="true"/>
            </column>
            <column name="nome" type="varchar(20)" remarks="titulo da situacao">
                <constraints nullable = "false"/>
            </column>
        </createTable>
        <insert tableName="situacao">
            <column name="nome" value="Adiado" remarks ="situacao do evento = adiado"/>
        </insert>
        <insert tableName="situacao">
            <column name="nome" value="Em espera" remarks ="situacao do evento = Em espera"/>
        </insert>
        <insert tableName="situacao">
            <column name="nome" value="Realizado" remarks ="situacao do evento = realizado"/>
        </insert>
        <insert tableName="situacao">
            <column name="nome" value="Cancelado" remarks ="situacao do evento = Cancelado"/>
        </insert>
    </changeSet>

</databaseChangeLog>