<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="202109151710" author="maria.ribeiro">
        <createTable tableName="EVENTO">
            <column name="ID" type="int" autoIncrement="true" remarks="identificador tabela evento">
                <constraints primaryKey="true"/>
            </column>
            <column name="nome" type="varchar(50)" remarks="titulo do evento">
                <constraints nullable="false"/>
            </column>
            <column name="motivo_id" type="int" remarks="chave estrangeira">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="date" remarks="data do evento">
                <constraints nullable="false"/>
            </column>
            <column name="patrocinador" type="int" remarks="identificador de patrocinador ">
                <constraints nullable="false"/>
            </column>
            <column name="valor" type="money" remarks="custo do evento">
                <constraints nullable="false"/>
            </column>
            <column name="situacao_id" type="int" remarks="identificador tabela situacao">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="202109151713" author="maria.ribeiro">
        <addForeignKeyConstraint baseTableName="evento"
                                 baseColumnNames="situacao_id"
                                 constraintName="FK_EVENTO_SITUACAO"
                                 referencedTableName="situacao"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="202109151715" author="maria.ribeiro">

        <addForeignKeyConstraint baseTableName="evento"
                                 baseColumnNames="motivo_id"
                                 constraintName="FK_EVENTO_MOTIVO"
                                 referencedTableName="motivo"
                                 referencedColumnNames="id"/>
    </changeSet>


</databaseChangeLog>